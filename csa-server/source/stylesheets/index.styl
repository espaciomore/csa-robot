      overflow: auto scroll;
      margin-bottom: 130px;
      padding-top: 20px;
      padding-right: 40px;
      padding-bottom: 1px;
      min-height: 80px;
      list-style-type: none;
      color: rgb(255, 255, 255);
      
      li
        padding: 20px;
        max-width: 60%;
        margin-bottom: 6px !important;

        p
          display: inline-block;
          margin: 0;

      .agent-speech
        background-color: rgb(70, 183, 105);
        border-radius: .4em;
        text-align: left;

      .customer-speech
        background-color: #e6e6e6;
        color: #5c6667;
        border-radius: .4em;
        text-align: right;

    .entry-speech
      position: fixed;
      bottom: 60px;
      left: 0;
      right: 0;
      padding: 20px;
      width: 100%;
      background-color: rgb(230, 230, 230);
      border-radius: .4em;
      color: #0a0a0a;
      margin: auto;
      
      button
        margin-right: 10px;
        margin-left: 10px;
        width: 60px;
        height: 30px;
        border-radius: .4em;
        box-shadow: 1px 1px 1px #ababab;

      input.text-entry, textarea.text-entry, select.select-entry
        max-width: 56%;
        min-width: 52%;
        text-align: inherit;
        background-color: inherit;
        border: none;
        outline: none;
        border-color: inherit;
        -webkit-box-shadow: none;
        box-shadow: none;
        font-family: inherit;
        font-size: inherit;
        line-height: inherit;

