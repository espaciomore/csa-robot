@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

.center-element
  margin: auto;

.center-text
  text-align: center;

.hide
  visibility: hidden;
  opacity: 0;

.show
  visibility: visible;
  opacity: 1.0;

.removed
  display: none;
  opacity: 0;

.displayed
  display: block;
  opacity: 0;

input.error
  border: 1px solid/*dotted*/ red !important;

.typewriter 
  overflow: auto; 
  border-right: transparent/*.15em solid gray*/;
  white-space: nowrap;
  letter-spacing: .2em;
  animation: 
    typing 3.5s steps(30, end)/*,
    blink-caret .75s step-end infinite*/;

.typewriter::-webkit-scrollbar { 
  display: none; 
}

@keyframes typing {
  from { width: 0 }
  to { width: 100% }
}

@keyframes blink-caret {
  from, to { border-color: transparent }
  50% { border-color: gray; }
}

::selection 
  background: rgb(194, 231, 200); /* WebKit/Blink Browsers */

::-moz-selection 
  background: rgb(194, 231, 200); /* Gecko Browsers */

a:link {
    color: #777;
}

a:visited {
    color: #999;
}

a:hover {
    color: #47b969;
}

a:active {
    color: #888;
}

body
