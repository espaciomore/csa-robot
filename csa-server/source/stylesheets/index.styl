  text-align: center;
  position: relative;
  margin: 0;
  background: url('/img/csa-unisex-128.png') no-repeat 10px 10px fixed;

  .header
    color: rgb(70, 183, 105);
    text-shadow: 1px 1px darkgreen;
    padding-top: 20px;
    min-height: 40px;
    padding-bottom: 20px;
    margin-top: 0;
    margin-bottom: 0;
    top: 0;
    left: 0;
    right: 0;

  .content
    overflow: auto;
    height: 90%;
    width: 100%;

    .chat
